{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["esnext"],
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
