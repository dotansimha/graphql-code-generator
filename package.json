    "tslint": "5.9.1",
    "typescript": "2.7.2",
    "graphql": "0.13.1",
    "graphql-tag": "2.8.0",
    "jest": "22.4.2",
    "rimraf": "2.6.2",
    "ts-jest": "22.4.1",
    "graphql-tools": "2.23.0",
    "apollo-link": "1.2.1",
    "awesome-typescript-loader": "4.0.1",
